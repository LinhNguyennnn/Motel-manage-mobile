{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@libs": ["src/libs"],
      "@libs/*": ["src/libs/*"],
      "@configs": ["src/configs"],
      "@configs/*": ["src/configs/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@navigators": ["src/navigators"],
      "@navigators/*": ["src/navigators/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@redux": ["src/redux"],
      "@redux/*": ["src/redux/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
